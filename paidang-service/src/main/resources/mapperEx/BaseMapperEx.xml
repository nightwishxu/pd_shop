<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.item.daoEx.BaseMapperEx">
	<update id="updateNumById">
		update ${tableName} set ${colum} = ${colum} + #{num} where ${idColum} = #{id}
	</update>

	<update id="updateMoneyById">
		update ${tableName} set ${colum} = ${colum} + #{price} where ${idColum} = #{id}
	</update>
</mapper>